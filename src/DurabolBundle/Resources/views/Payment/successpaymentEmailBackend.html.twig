
{% block stylesheets %}
    <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('bundles/durabol/css/button.css') }}" />
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ asset('bundles/durabol/css/orderinfo.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/durabol/css/cart.css') }}" />
{% endblock %}

{% block body %}
    <br><br>
    <div class="container" style="min-height:400px;">
        <div class="box col-xs-12 col-lg-6" style="display: inline-block;margin-top: 30px">
            <h3 class="box"><b>百团网新订单提醒</b></h3>
            <h4>请进入网站后台 www.groupon100.com/admin 进行查看.</h4>
            <br><br><br>
            <h4>客户名/公司名: {{ orderInfo.receiverName }}</h4>
            <h4>总订单: {{ orderInfo.id }}</h4>
            <h4>子订单: {% for childOrderInfo in childOrderInfos %}{{ childOrderInfo.id }} {% endfor %}</h4>
            <h4>订单总额: {{ orderInfo.totalPrice|number_format(2, '.', ',') }} €</h4>
            <h4>下单时间: {% if orderInfo.orderDate %}{{ orderInfo.orderDate|date('Y-m-d H:i:s') }}{% endif %}</h4>
            <br>
        </div>
    </div>
{% endblock %}
