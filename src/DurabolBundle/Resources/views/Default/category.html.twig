{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/durabol/css/index.css') }}">
{% endblock %}

{% block body %}
    {% include 'DurabolBundle:Public:header.html.twig' %}

    {% for category in categories %}
        <div class="container-fluid" style="margin-top: 80px;">
            <a href="{{ path('font_productList', { 'category': category.id }) }}" style="color: #000;">
                <div class="col-xs-12" id="category">
                    <div class="col-xs-4 col-lg-2">
                        <img src="{{ asset('uploads/fotos/' ~ category.foto) }}" style="width: 100%;max-width: 100%;">
                    </div>
                    <div class="col-xs-6 col-lg-8 categoryinfo" >
                        <br><h3>{{ category.name }}</h3><br>
                        <h5>{{ category.description }}</h5>
                    </div>
                    <div class="col-xs-2">
                        <i class="fa fa-chevron-right" aria-hidden="true" style="line-height: 250px;font-size: 26px;font-weight: 600;"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-xs-12">
            <hr class="featurette-divider">
        </div>
    {% endfor %}

{% endblock %}
