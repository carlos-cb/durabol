{% extends 'base.html.twig' %}

{% block title %}Groupon100{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/durabol/css/index.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/durabol/css/footer.css') }}">
{% endblock %}

{% block body %}
    {% include 'DurabolBundle:DefaultEs:header.html.twig' %}

    <div class="container-fluid" style="margin-top: 80px;">
        {% for category in categories %}
            <a href="{{ path('font_productList_es', { 'category': category.id }) }}" style="color: #000;">
                <div class="col-xs-12" id="category">
                    <div class="col-xs-4 col-lg-2">
                        <img src="{{ asset('uploads/fotos/' ~ category.foto) }}" style="width: 100%;max-width: 100%;">
                    </div>
                    <div class="col-xs-6 col-lg-8 categoryinfo" >
                        <h3>{{ category.nameEs }}</h3><br>
                        <h5>{{ category.descriptionEs }}</h5>
                    </div>
                    <div class="col-xs-2">
                        <i class="fa fa-chevron-right rightlogo" aria-hidden="true"></i>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>

{% endblock %}
