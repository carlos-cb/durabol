{% endblock %}

{% block content %}
    <h1>产品批量导入预览</h1>
    <br>
    <ul>
        <li>
            <a href="{{ path('product_importExcel') }}" class="button button-rounded button-inverse">确认上传</a>
            <a href="{{ path('product_importFile') }}" class="button button-rounded button-inverse">返回</a>
        </li>
    </ul>
    <br>
    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th>名称</th>
            <th>价格</th>
            <th>编号</th>
            <th>图片名</th>
            <th>所属分类</th>
            <th>单位</th>
            <th>是否打折</th>
            <th>折后价格</th>
            <th>西语名</th>
        </tr>
        </thead>
        <tbody>
        {% for data in datas %}
            <tr>
                <td>{{ data.0 }}</td>
                <td>{{ data.1 }}</td>
                <td>{{ data.2 }}</td>
                <td>{{ data.3 }}</td>
                <td>{{ data.4 }}</td>
                <td>{{ data.5 }}</td>
                <td>{{ data.6 }}</td>
                <td>{{ data.7 }}</td>
                <td>{{ data.8 }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
